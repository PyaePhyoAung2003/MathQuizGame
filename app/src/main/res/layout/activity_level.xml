<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".level">

  <TextView
      android:id="@+id/idTxtLevel"
      android:layout_width="128dp"
      android:layout_height="32dp"
      android:text="Level"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/idtxtquestion"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.477"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.262" />

  <TextView
      android:id="@+id/idtxtscore"
      android:layout_width="92dp"
      android:layout_height="29dp"
      android:layout_marginTop="112dp"
      android:layout_marginEnd="140dp"
      android:text="Score"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/idtxtqnum"
      app:layout_constraintEnd_toStartOf="@+id/idtxttimer"
      app:layout_constraintHorizontal_bias="0.322"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.238" />

  <TextView
      android:id="@+id/idtxttimer"
      android:layout_width="116dp"
      android:layout_height="34dp"
      android:layout_marginEnd="32dp"
      android:text="Timer: 00:20"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.19" />

  <TextView
      android:id="@+id/idtxtqnum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="520dp"
      android:text="Question: 1/2"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.048"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/idtxtquestion"
      android:layout_width="135dp"
      android:layout_height="28dp"
      android:layout_marginBottom="72dp"
      android:text="1+2 will  be?"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/idrg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/idnext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="48dp"
      android:text="Next"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/idsubmit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="48dp"
      android:text="SUBMIT"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent" />

  <RadioGroup
      android:id="@+id/idrg"
      android:layout_width="286dp"
      android:layout_height="189dp"
      android:layout_marginBottom="100dp"
      app:layout_constraintBottom_toTopOf="@+id/idnext"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <RadioButton
        android:id="@+id/idopt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/idopt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/idopt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/idopt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RadioButton" />
  </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>